{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7"],
    "jsx": "react",
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}